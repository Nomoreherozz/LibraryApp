@model IEnumerable<PE2023test.Models.Author>  
     
@{  
    Layout = "_Layout2";
        ViewData["Title"] = "Thư viện của những chú bé";  
    }  

<section class ="breadcrumb">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>Author Index Page.</h2>
            </div>
        </div>
    </div>
</section>

<section class="table-section">
    <div class="container">
        <div class="row row-balance">
            <div class="col-lg-12">
                <div class="title-text">
                    <h4>Author Report</h4>
                </div>
           </div>
        </div>
        <table class="table table-responsive">  
            <thead>  
                <tr>  
                    <th scope="col">  
                        @Html.DisplayNameFor(model => model.Author_ID)  
                    </th>
                    <th scope="col">
                        Name
                    </th>
                    <th scope="col">
                        Details
                    </th>
                </tr>  
            </thead>  
            <tbody>  
                @foreach (var item in Model)  
                {  
                    <tr>  
                        <td>  
                            @Html.DisplayFor(modelItem => item.Author_ID)  
                        </td>  
                        <td>  
                            @Html.DisplayFor(model => item.Author_fname)  
                            @Html.DisplayFor(model => item.Author_lname) 
                        </td>  
                        <td>  
                            <a asp-action="AuthorEdit" asp-route-id="@item.Author_ID">Edit</a> |  
                            <a asp-action="AuthorDetails" asp-route-id="@item.Author_ID">Details</a> |  
                            <a asp-action="AuthorDelete" asp-route-id="@item.Author_ID">Delete</a>   
                        </td>  
                    </tr>  
                }  
            </tbody>  
        </table>
        <div class="row" style="text-align:center;padding-bottom:20px;margin-top:20px">
            <div class="col-lg-12">
                <a asp-action="AuthorCreate" class="navigate-link">To create a new author</a>  
            </div>
        </div>
    </div>
</section>

