@{
    Layout = "_Layout2";
    ViewData["Title"] = "Details Author";  
}

@model PE2023test.Models.Author

<section class ="breadcrumb">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>Author Details Page.</h2>
            </div>
        </div>
    </div>
</section>

<section class="author-details">
    <div class = "container">
        <div class="row row-balance">
            <div class="col-lg-12">
                <div class="title-text">
                    <h4>Author Details</h4>
                </div>
           </div>
        </div>
        <div class="row">
            <dl class="dl-horizontal">
                <dt>  
                    @Html.DisplayNameFor(model => model.Author_ID)  
                </dt>  
                <dd>  
                    @Html.DisplayFor(model => model.Author_ID)  
                </dd>  
                <dt>  
                    @Html.DisplayNameFor(model => model.Author_fname)  
                </dt>  
                <dd>  
                    @Html.DisplayFor(model => model.Author_fname)  
                </dd>  
                <dt>  
                    @Html.DisplayNameFor(model => model.Author_lname)  
                </dt>  
                <dd>  
                    @Html.DisplayFor(model => model.Author_lname)  
                </dd>  
            </dl>  
        </div>
    </div>
    <div class="row link-row">
        <div class="col-lg-4">
             <a asp-action="AuthorEdit" asp-route-id="@Model.Author_ID" class="navigate-link">Edit</a>  
        </div>
        <div class="col-lg-4">
               <a asp-action="AuthorIndex" class="navigate-link">Back to List</a>  
        </div>
    </div>
</section>

