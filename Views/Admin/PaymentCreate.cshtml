@model PE2023test.Models.Payment
  
@{  
    Layout = "_Layout2";
    ViewData["Title"] = "Create new bill";  
}  

<section class ="breadcrumb">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>Create Payment Page.</h2>
            </div>
        </div>
    </div>
</section>

<section class="create-payment">
    <div class="container">
        <div class="row row-balance">
            <div class="col-lg-12">
                <div class="title-text">
                    <h4>Create Payment</h4>
                </div>
           </div>
            <div class="col-lg-4 col-md-3 col-sm-3">  
               <form asp-action="PaymentCreate">  
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>  
                    <div class="form-group">  
                        <label asp-for="Payment_ID" class="label">Create the Payment ID</label>  
                        <input asp-for="Payment_ID" class="form-control input-text" />  
                        <span asp-validation-for="Payment_ID" class="text-danger"></span>  
                    </div>  
                   <div class="form-group">  
                        <label asp-for="Customer_ID" class="label">Create the Customer ID</label>  
                        <input asp-for="Customer_ID" class="form-control input-text" />  
                        <span asp-validation-for="Customer_ID" class="text-danger"></span>  
                    </div>
                    <div class="form-group">  
                        <input type="submit" value="Issue an invoice" class="btn" />  
                    </div>  
                </form>  
           </div>  
       </div>
    </div>
    <div class="row link-row">
        <div class="col-lg-4">
           <a asp-action="PaymentIndex" class="navigate-link">Back to List Bills</a>    
        </div>
    </div>
</section> 
  
@section Scripts {  
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}  
}