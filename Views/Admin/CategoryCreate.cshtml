@model PE2023test.Models.Category 
  
@{  
    Layout = "_Layout2";
    ViewData["Title"] = "Create new category";  
}

<section class ="breadcrumb">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>Create Category Page.</h2>
            </div>
        </div>
    </div>
</section>

<section class="create-authorbook">
    <div class="container">
        <div class="row row-balance">
            <div class="col-lg-12">
                <div class="title-text">
                    <h4>Create Category</h4>
                </div>
           </div>
            <div class="col-lg-4 col-md-3 col-sm-3">  
               <form asp-action="CategoryCreate">  
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>  
                <div class="form-group">  
                    <label asp-for="Category_ID" class="label">Create the Category ID</label>  
                    <input asp-for="Category_ID" class="form-control input-text" />  
                    <span asp-validation-for="Category_ID" class="text-danger"></span>  
                </div>  
               <div class="form-group">  
                    <label asp-for="Category_name" class="label">Create the Category name</label>  
                    <input asp-for="Category_name" class="form-control input-text" />  
                    <span asp-validation-for="Category_name" class="text-danger"></span>  
                </div>
                <div class="form-group">  
                    <input type="submit" value="Category Create" class="btn" />  
                </div>  
            </form>  
           </div>  
       </div>
    </div>
    <div class="row link-row">
        <div class="col-lg-4">
           <a asp-action="CategoryIndex" class="navigate-link">Back to List</a>    
        </div>
    </div>
</section>  
 
@section Scripts {  
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}  
}

}