@model PE2023test.Models.Fine
  
@{  
    Layout = "_Layout2";
    ViewData["Title"] = "Create new fine";  
}  

<section class ="breadcrumb">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>Create Fine Page.</h2>
            </div>
        </div>
    </div>
</section>

<section class="create-fine">
    <div class="container">
        <div class="row row-balance">
            <div class="col-lg-12">
                <div class="title-text">
                    <h4>Fine Create</h4>
                </div>
           </div>
            <div class="col-lg-4 col-md-3 col-sm-3">  
               <form asp-action="AuthorCreate">  
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>  
                <div class="form-group">  
                    <label asp-for="SessionID" class="label">Edit the Session ID</label>  
                    <input asp-for="SessionID" class="form-control input-text" />  
                    <span asp-validation-for="SessionID" class="text-danger"></span>  
                </div>  
               <div class="form-group">  
                    <label asp-for="Fine_days" class="label">Edit the Fine Days</label>  
                    <input asp-for="Fine_days" class="form-control input-text" />  
                    <span asp-validation-for="Fine_days" class="text-danger"></span>  
                </div>   
                <div class="form-group">  
                    <label asp-for="Fine_amount" class="label">Edit the Fine Amount</label>  
                    <input asp-for="Fine_amount" class="form-control input-text" />  
                    <span asp-validation-for="Fine_amount" class="text-danger"></span>  
                </div>
                <div class="form-group">  
                    <input type="submit" value="Fine Create" class="btn btn-default" />  
                </div>  
            </form>  
           </div>  
       </div>
    </div>
    <div class="row link-row">
        <div class="col-lg-4">
           <a asp-action="FineIndex" class="navigate-link">Back to List</a>    
        </div>
    </div>
</section>   

@section Scripts {  
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}  
}