@model PE2023test.Models.Payment

@{  
    Layout = "_Layout2";
    ViewData["Title"] = "Edit";  
}  

<section class ="breadcrumb">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>Edit Payment Page.</h2>
            </div>
        </div>
    </div>
</section>

<section class="edit-payment">
    <div class="container">
        <div class="row row-balance">
            <div class="col-lg-12">
                <div class="title-text">
                    <h4>Edit Payment</h4>
                </div>
           </div>
            <div class="col-lg-4 col-md-3 col-sm-3">  
                <form asp-action="PaymentEdit">  
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>  
                    <input type="hidden" asp-for="Payment_ID" />  
                    <div class="form-group">  
                        <label asp-for="Customer_ID" class="label">Edit the Customer ID</label>  
                        <input asp-for="Customer_ID" class="form-control input-text" />  
                        <span asp-validation-for="Customer_ID" class="text-danger"></span>  
                    </div>  
                    <div class="form-group">  
                        <label asp-for="Lease_date" class="label">Edit the Lease Date</label>  
                        <input asp-for="Lease_date" class="datetime" />  
                        <span asp-validation-for="Lease_date" class="text-danger"></span>  
                    </div>  
                    <div class="form-group">  
                        <label asp-for="Payment_date" class="label">Edit the Payment Date</label>  
                        <input asp-for="Payment_date" class="datetime" />  
                        <span asp-validation-for="Payment_date" class="text-danger"></span>  
                    </div>  
                    <div class="form-group">  
                        <label asp-for="Payment_amount" class="label">Edit the Payment Amount</label>  
                        <input asp-for="Payment_amount" class="form-control input-text" />  
                        <span asp-validation-for="Payment_amount" class="text-danger"></span>  
                    </div>
                    <div class="form-group">  
                        <input type="submit" value="Save" class="btn" />  
                    </div>  
                </form>  
           </div>  
       </div>
    </div>
    <div class="row link-row">
        <div class="col-lg-4">
           <a asp-action="PaymentIndex" class="navigate-link">Back to List</a>    
        </div>
    </div>
</section>    

@section Scripts {  
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}  
}