@{
    Layout = "_Layout2";
    ViewData["Title"] = "Details";  
}

@model PE2023test.Models.Payment

<section class ="breadcrumb">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>Payment Details Page.</h2>
            </div>
        </div>
    </div>
</section>

<section class="payment-details">
    <div class = "container">
        <div class="row row-balance">
            <div class="col-lg-12">
                <div class="title-text">
                    <h4>Payment Details</h4>
                </div>
           </div>
        </div>
        <div class="row">
            <dl class="dl-horizontal">
                <dt>  
                    @Html.DisplayNameFor(model => model.Payment_ID)  
                </dt>  
                <dd>  
                    @Html.DisplayFor(model => model.Payment_ID)  
                </dd>  
                <dt>  
                    @Html.DisplayNameFor(model => model.Customer_ID)  
                </dt>  
                <dd>  
                    @Html.DisplayFor(model => model.Customer_ID)  
                </dd>  
                <dt>  
                    @Html.DisplayNameFor(model => model.Lease_date)  
                </dt>  
                <dd>  
                    @Html.DisplayFor(model => model.Lease_date)  
                </dd>  
                <dt>  
                    @Html.DisplayNameFor(model => model.Payment_date)  
                </dt>  
                <dd>  
                    @Html.DisplayFor(model => model.Payment_date)
                </dd>  
                <dt>  
                    @Html.DisplayNameFor(model => model.Payment_amount)  
                </dt>  
                <dd>  
                    @Html.DisplayFor(model => model.Payment_amount)
                </dd>  
            </dl>  
        </div>
    </div>
    <div class="row link-row">
        <div class="col-lg-4">
              <a asp-action="PaymentEdit" asp-route-id="@Model.Payment_ID" class="navigate-link">Edit</a> |  
        </div>
        <div class="col-lg-4">
               <a asp-action="PaymentIndex" class="navigate-link">Back to List</a>  
        </div>
    </div>
</section>


   