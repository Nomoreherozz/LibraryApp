@model IEnumerable<PE2023test.Models.Fine>  
     
@{  
    Layout = "_Layout2";
        ViewData["Title"] = "Thư viện của những chú bé";  
    }  

<section class ="breadcrumb">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>Fine Index Page.</h2>
            </div>
        </div>
    </div>
</section>

<section class="table-section">
    <div class="container">
        <div class="row row-balance">
            <div class="col-lg-12">
                <div class="title-text">
                    <h4>Fine Report</h4>
                </div>
           </div>
        </div>
        <table class="table table-responsive">  
            <thead>  
                <tr>  
                    <th scope="col">  
                        @Html.DisplayNameFor(model => model.SessionID)  
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Fine_days)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Fine_amount)
                    </th>
                    <th scope="col">
                        Details
                    </th>
                </tr>  
            </thead>  
            <tbody>  
                @foreach (var item in Model)  
                {  
                    <tr>  
                        <td>  
                        @Html.DisplayFor(modelItem => item.SessionID)  
                        </td>  
                        <td>  
                            @Html.DisplayFor(model => item.Fine_days)  
                        </td>  
                        <td>  
                            @Html.DisplayFor(model => item.Fine_amount)  
                        </td> 
                        <td>  
                            <a asp-action="FineEdit" asp-route-id="@item.SessionID">Edit</a> |  
                            <a asp-action="FineDetails" asp-route-id="@item.SessionID">Details</a> |  
                            <a asp-action="FineDelete" asp-route-id="@item.SessionID">Delete</a>  
                        </td>  
                    </tr>  
                }  
            </tbody>  
        </table>
        <div class="row" style="text-align:center;padding-bottom:20px;margin-top:20px">
            <div class="col-lg-12">
                <a asp-action="FineCreate" class="navigate-link">To create a new fine manual</a>  
            </div>
        </div>
    </div>
</section>

