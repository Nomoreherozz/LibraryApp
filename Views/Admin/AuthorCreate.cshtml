@model PE2023test.Models.Author
  
@{
    Layout = "_Layout2";
    ViewData["Title"] = "Create new author";  
}  

<section class ="breadcrumb">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>Create Author Page.</h2>
            </div>
        </div>
    </div>
</section>

<section class="create-author">
    <div class="container">
        <div class="row row-balance">
            <div class="col-lg-12">
                <div class="title-text">
                    <h4>Create Author</h4>
                </div>
           </div>
            <div class="col-lg-4 col-md-3 col-sm-3">  
               <form asp-action="AuthorCreate">  
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>  
                <div class="form-group">  
                    <label asp-for="Author_ID" class="label">Create the Author_ID</label>  
                    <input asp-for="Author_ID" class="form-control input-text" />  
                    <span asp-validation-for="Author_ID" class="text-danger"></span>  
                </div>  
               <div class="form-group">  
                    <label asp-for="Author_fname" class="label">Create the Author first name</label>  
                    <input asp-for="Author_fname" class="form-control input-text" />  
                    <span asp-validation-for="Author_fname" class="text-danger"></span>  
                </div>   
                <div class="form-group">  
                    <label asp-for="Author_lname" class="label">Create the Author last name</label>  
                    <input asp-for="Author_lname" class="form-control input-text" />  
                    <span asp-validation-for="Author_lname" class="text-danger"></span>  
                </div>  
                <div class="form-group">  
                    <input type="submit" value="Save" class="btn btn-default" />  
                </div>  
            </form>  
           </div>  
       </div>
    </div>
    <div class="row link-row">
        <div class="col-lg-4">
           <a asp-action="AuthorIndex" class="navigate-link">Back to List</a>    
        </div>
    </div>
</section>  
 
@section Scripts {  
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}  
}