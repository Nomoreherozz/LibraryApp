@model IEnumerable<PE2023test.Models.User>  
     
@{  
    Layout = "_Layout2";
        ViewData["Title"] = "Thư viện của những chú bé";  
    }  

    <section class ="breadcrumb">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>User Index Page.</h2>
            </div>
        </div>
    </div>
</section>

<section class="table-section">
    <div class="container">
        <div class="row row-balance">
            <div class="col-lg-12">
                <div class="title-text">
                    <h4>User Report</h4>
                </div>
           </div>
        </div>
        <table class="table table-responsive">  
            <thead>  
                <tr>  
                    <th scope="col">  
                        @Html.DisplayNameFor(model => model.ISSN)  
                    </th>  
                    <th scope="col">  
                        @Html.DisplayNameFor(model => model.Name)  
                    </th>  
                    <th scope="col">   
                        @Html.DisplayNameFor(model => model.Email)  
                    </th>  
                    <th scope="col">  
                        @Html.DisplayNameFor(model => model.Address)  
                    </th>  
                    <th scope="col">  
                        @Html.DisplayNameFor(model => model.Phone)  
                    </th scope="col">  
                    <th scope="col">
                        Details
                    </th>  
                </tr>  
            </thead>  
            <tbody>  
                @foreach (var item in Model)  
                {  
                    <tr>  
                         <th>  
                        @Html.DisplayFor(modelItem => item.ISSN)  
                        </th>  
                        <th>  
                            @Html.DisplayFor(model => item.Name)  
                        </th>  
                        <th>  
                            @Html.DisplayFor(model => item.Email)  
                        </th>  
                        <th>  
                            @Html.DisplayFor(model => item.Address)  
                        </th>  
                        <th>  
                            @Html.DisplayFor(model => item.Phone)  
                        </th>  
                        <td>  
                            <a asp-action="UserEdit" asp-route-id="@item.ISSN">Edit</a> |  
                            <a asp-action="UserDetails" asp-route-id="@item.ISSN">Details</a> |  
                            <a asp-action="UserDelete" asp-route-id="@item.ISSN">Delete</a>  
                        </td> 
                    </tr>  
                }  
            </tbody>  
        </table>
        <div class="row" style="text-align:center;padding-bottom:20px;margin-top:20px">
            <div class="col-lg-12">
                <a asp-action="UserCreate" class="navigate-link">To create a new user</a>  
            </div>
        </div>
    </div>
</section>

