@*
    
*@
@{
    Layout = "_Layout2";
    ViewData["Title"] = "Track renting book";  
}

@model IEnumerable<PE2023test.Models.Lease>  
<section class ="breadcrumb">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>Track Renting Book Page.</h2>
            </div>
        </div>
    </div>
</section>

<section class="table-section">
    <div class="container">
        <div class="row row-balance">
            <div class="col-lg-12">
                <div class="title-text">
                    <h4>Track Renting Book Report</h4>
                </div>
           </div>
           <div class="col-lg-3 col-md-4 col-sm-6">
               <input type="text" id="filter-issn" onkeyup="filterISSN()" placeholder="Filter by ISSN">
           </div>
        </div>
        <table class="table table-responsive" id="track-book-table" style="margin-top:30px;border-top:1px solid white">  
            <thead>  
                <tr>  
                    <th>  
                        @Html.DisplayNameFor(model => model.SessionID)  
                    </th scope="col">  
                    <th>  
                        @Html.DisplayNameFor(model => model.ISSN)  
                    </th>  
                    <th>  
                        @Html.DisplayNameFor(model => model.Name_Book)  
                    </th>  
                    <th scope="col" class="res-column">  
                        @Html.DisplayNameFor(model => model.Expiry_date)  
                    </th>  
                    <th scope="col" class="res-column">  
                        @Html.DisplayNameFor(model => model.Status)  
                    </th>  
                    <th scope="col">
                        Functions
                    </th>
                </tr>  
            </thead>  
            <tbody>  
                @foreach (var item in Model)  
                {  
                    <tr>  
                        <td>  
                            @Html.DisplayFor(modelItem => item.SessionID)  
                        </td>  
                        <td>  
                            @Html.DisplayFor(model => item.ISSN)  
                        </td>
                        <td>  
                            @Html.DisplayFor(modelItem => item.Name_Book)  
                        </td> 
                        <td class="res-column">  
                            @Html.DisplayFor(model => item.Expiry_date)  
                        </td>  
                        <td class="res-column">  
                            @Html.DisplayFor(model => item.Status)  
                        </td>  
                        <td>  
                             <a asp-action="LeaseDetails" asp-route-id="@item.SessionID" class ="navigate-link tab" >Details</a> 
                             <a asp-action="LeaseEdit" asp-route-id="@item.SessionID" class ="navigate-link tab">Edit</a> 
                        </td>  
                    </tr>  
                }  
            </tbody>  
        </table>
        <a asp-action="Track_Renting_Books" class ="navigate-link tab">Back to List</a>
    </div>
</section>







