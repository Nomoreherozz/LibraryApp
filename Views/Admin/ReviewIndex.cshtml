@model IEnumerable<PE2023test.Models.Review>  
     
@{  
    Layout = "_Layout2";
        ViewData["Title"] = "Thư viện của những chú bé";  
 }

<section class ="breadcrumb">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>Review Index Page.</h2>
            </div>
        </div>
    </div>
</section>

<section class="table-section">
    <div class="container">
        <div class="row row-balance">
            <div class="col-lg-12">
                <div class="title-text">
                    <h4>Review Report</h4>
                </div>
           </div>
        </div>
        <table class="table table-responsive">  
            <thead>  
                <tr>  
                    <th scope="col">  
                        @Html.DisplayNameFor(model => model.IDBook)  
                    </th>  
                    <th scope="col">  
                        @Html.DisplayNameFor(model => model.ISSNum)  
                    </th>  
                    <th scope="col" class="res-column">  
                        @Html.DisplayNameFor(model => model.Review_date)  
                    </th>  
                    <th scope="col" class="res-column">  
                        @Html.DisplayNameFor(model => model.Review_context)  
                    </th>  
                    <th scope="col" class="res-column">   
                        @Html.DisplayNameFor(model => model.Review_star)  
                    </th>  
                    <th scope="col">
                        Details
                    </th>
                </tr>  
            </thead>  
            <tbody>  
                @foreach (var item in Model)  
                {  
                    <tr>  
                        <td>  
                            @Html.DisplayFor(modelItem => item.IDBook)  
                        </td>  
                        <td>  
                            @Html.DisplayFor(model => item.ISSNum)  
                        </td>  
                        <td class="res-column">  
                            @Html.DisplayFor(model => item.Review_date)  
                        </td>  
                        <td class="res-column">  
                            @Html.DisplayFor(model => item.Review_context)  
                        </td>  
                        <td class="res-column">  
                            @for (int i=0;i< item.Review_star; i++)
                            {
                                <span class="fa-solid fa-star"></span>
                            }
                        </td> 
                        <td>  
                            <a asp-action="ReviewEdit" asp-route-id="@item.ISSNum" asp-route-id2="@item.IDBook">Edit</a> |  
                            <a asp-action="ReviewDetails" asp-route-id="@item.ISSNum" asp-route-id2="@item.IDBook">Details</a> |  
                            <a asp-action="ReviewDelete" asp-route-id="@item.ISSNum" asp-route-id2="@item.IDBook">Delete</a>  
                        </td> 
                    </tr>  
                }  
            </tbody>  
        </table>
        <div class="row" style="text-align:center;padding-bottom:20px;margin-top:20px">
            <div class="col-lg-12">
                <a asp-action="ReviewCreate" class="navigate-link">To create a new review</a>  
            </div>
        </div>
    </div>
</section>

