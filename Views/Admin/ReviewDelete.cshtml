@model PE2023test.Models.Review

@{  
    Layout = "_Layout2";
    ViewData["Title"] = "Delete";  
}  

<section class ="breadcrumb">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>Revview Delete Page.</h2>
            </div>
        </div>
    </div>
</section>

<section class="delete-review">
    <div class = "container">
        <div class="row row-balance">
            <div class="col-lg-12">
                <div class="title-text">
                    <h4>Delete Review</h4>
                    <h5>Are you sure you want to delete the review below?</h5>
                </div>
           </div>
        </div>
        <div class="row">
            <dl class="dl-horizontal">
               <dt>  
                    @Html.DisplayNameFor(model => model.IDBook)  
                </dt>  
                <dd>  
                    @Html.DisplayFor(model => model.IDBook)  
                </dd>  
                <dt>  
                    @Html.DisplayNameFor(model => model.ISSNum)  
                </dt>  
                <dd>  
                    @Html.DisplayFor(model => model.ISSNum)  
                </dd>  
                <dt>  
                    @Html.DisplayNameFor(model => model.Review_date)  
                </dt>  
                <dd>  
                    @Html.DisplayFor(model => model.Review_date)  
                </dd>  
                <dt>  
                    @Html.DisplayNameFor(model => model.Review_context)  
                </dt>  
                <dd>  
                    @Html.DisplayFor(model => model.Review_context)
                </dd>  
                <dt>  
                    @Html.DisplayNameFor(model => model.Review_star)  
                </dt>  
                <dd>  
                    @for (int i=0;i< Model.Review_star; i++)
                    {
                        <span class="fa fa-star checked"></span>
                    }
                </dd>          
            </dl>  
        </div>
    </div>
    <div class="row">
        <form asp-action="ReviewDelete" asp-route-id="@Model.ISSNum" asp-route-id2="@Model.IDBook">
            <input type="submit" value="ReviewDelete" class="btn" /> 
        </form>
    </div>
    <div class="row link-row" style="margin-top:20px">
        <div class="col-lg-12">
            <a asp-action="ReviewIndex" class="navigate-link">Back to List</a>
        </div>
    </div>
</section>

