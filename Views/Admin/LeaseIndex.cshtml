@model IEnumerable<PE2023test.Models.Lease>  
     
@{  
    Layout = "_Layout2";
        ViewData["Title"] = "Thư viện của những chú bé";  
    }  

<section class ="breadcrumb">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>Lease Index Page.</h2>
            </div>
        </div>
    </div>
</section>

<section class="table-section">
    <div class="container">
        <div class="row row-balance">
            <div class="col-lg-12">
                <div class="title-text">
                    <h4>Lease Report</h4>
                </div>
           </div>
        </div>
        <table class="table table-responsive">  
            <thead>  
                <tr>  
                    <th scope="col">  
                        @Html.DisplayNameFor(model => model.SessionID)  
                    </th>  
                    <th scope="col">  
                        @Html.DisplayNameFor(model => model.Book_ID)  
                    </th>  
                    <th scope="col">  
                        @Html.DisplayNameFor(model => model.Name_Book)  
                    </th> 
                    <th>  
                        @Html.DisplayNameFor(model => model.ISSN)  
                    </th>  
                    <th scope="col" class="res-column">  
                        @Html.DisplayNameFor(model => model.Lease_date)  
                    </th>  
                    <th scope="col" class="res-column">  
                        @Html.DisplayNameFor(model => model.Expiry_date)  
                    </th>  
                    <th>  
                        @Html.DisplayNameFor(model => model.Status)  
                    </th>  
                    <th scope="col">
                        Details
                    </th>
                </tr>  
            </thead>  
            <tbody>  
                @foreach (var item in Model)  
                {  
                    <tr>  
                        <td>  
                        @Html.DisplayFor(modelItem => item.SessionID)  
                        </td>  
                        <td>  
                            @Html.DisplayFor(model => item.Book_ID)  
                        </td>  
                        <td>  
                            @Html.DisplayFor(model => item.Name_Book)  
                        </td> 
                        <td>  
                            @Html.DisplayFor(model => item.ISSN)  
                        </td>  
                        <td class="res-column">  
                            @Html.DisplayFor(model => item.Lease_date)  
                        </td>  
                        <td class="res-column">  
                            @Html.DisplayFor(model => item.Expiry_date)  
                        </td>  
                        <td>  
                            @Html.DisplayFor(model => item.Status)  
                        </td> 
                        <td>  
                            <a asp-action="LeaseEdit" asp-route-id="@item.SessionID">Edit</a> |  
                            <a asp-action="LeaseDetails" asp-route-id="@item.SessionID">Details</a> |  
                            <a asp-action="LeaseDelete" asp-route-id="@item.SessionID">Delete</a>  
                        </td>  
                    </tr>  
                }  
            </tbody>  
        </table>
        <div class="row" style="text-align:center;padding-bottom:20px;margin-top:20px">
            <div class="col-lg-12">
                <a asp-action="LeaseCreate" class="navigate-link">To create a new lease manual</a>  
            </div>
        </div>
    </div>
</section>
