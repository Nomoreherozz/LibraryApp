@model IEnumerable<PE2023test.Models.ViewBook>  
     
@{  
    Layout = "_Layout2";
        ViewData["Title"] = "Thư viện của những chú bé";  
    }  
<h2>SEARCH BOOK</h2>  
<p>  
    
</p>  
<table class="table">  
    <thead>  
        <tr>  
            <th>  
                @Html.DisplayNameFor(model => model.Book.ID)  
            </th>  
            <th>  
                @Html.DisplayNameFor(model => model.Book.Title)  
            </th>  
            <th>  
                @Html.DisplayNameFor(model => model.Book.Category_ID)  
            </th>  
            <th>  
                @Html.DisplayNameFor(model => model.Book.Publication_Year)  
            </th>  
            <th>  
                @Html.DisplayNameFor(model => model.Book.Quantity)  
            </th>  
            <th></th>  
        </tr>  
    </thead>  
    <tbody>  
        @foreach (var item in Model)  
{  
            <tr>  
                <th>  
                @Html.DisplayFor(modelItem => item.Book.ID)  
                </th>  
                <th>  
                    @Html.DisplayFor(model => item.Book.Title)  
                </th>  
                <th>  
                    @Html.DisplayFor(model => item.Book.Category_ID)  
                </th>  
                <th>  
                    @Html.DisplayFor(model => item.Book.Publication_Year)  
                </th>  
                <th>  
                    @Html.DisplayFor(model => item.Book.Quantity)  
                </th>  
                <td>  
                    <a asp-action="BookEdit" asp-route-id="@item.Book.ID">Edit</a> |  
                    <a asp-action="BookDetails" asp-route-id="@item.Book.ID">Details</a> |  
                    <a asp-action="BookDelete" asp-route-id="@item.Book.ID">Delete</a>  
                </td>  
            </tr>  
        }  
    </tbody>  
</table>

<div>  
    <a asp-action="BookCreate">To create a book</a>  
</div>  