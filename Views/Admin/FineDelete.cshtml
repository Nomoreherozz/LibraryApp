@model PE2023test.Models.Fine

@{  
    Layout = "_Layout2";
    ViewData["Title"] = "Delete";  
}  

<section class ="breadcrumb">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>Fine Delete Page.</h2>
            </div>
        </div>
    </div>
</section>

<section class="fine-delete">
    <div class = "container">
        <div class="row row-balance">
            <div class="col-lg-12">
                <div class="title-text">
                    <h4>Delete Fine</h4>
                    <h5>Are you sure you want to delete the fine below?</h5>
                </div>
           </div>
        </div>
        <div class="row">
            <dl class="dl-horizontal">
                <dt>  
                    @Html.DisplayNameFor(model => model.SessionID)  
                </dt>  
                <dd>  
                    @Html.DisplayFor(model => model.SessionID)  
                </dd>  
                <dt>  
                    @Html.DisplayNameFor(model => model.Fine_days)  
                </dt>  
                <dd>  
                    @Html.DisplayFor(model => model.Fine_days)  
                </dd>  
                <dt>  
                    @Html.DisplayNameFor(model => model.Fine_amount)  
                </dt>  
                <dd>  
                    @Html.DisplayFor(model => model.Fine_amount)  
                </dd>      
            </dl>  
        </div>
    </div>
    <div class="row">
        <form asp-action="FineDelete">
            <input type="hidden" asp-for="SessionID" />
            <input type="submit" value="Fine Delete" class="btn" />
        </form>
    </div>
    <div class="row link-row" style="margin-top:20px">
        <div class="col-lg-12">
            <a asp-action="FineIndex" class="navigate-link">Back to List</a>  
        </div>
    </div>
</section>

