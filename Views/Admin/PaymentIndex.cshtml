@model IEnumerable<PE2023test.Models.Payment>  
     
@{  
    Layout = "_Layout2";
        ViewData["Title"] = "Thư viện của những chú bé";  
    }  
<section class ="breadcrumb">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>Payment Index Page.</h2>
            </div>
        </div>
    </div>
</section>

<section class="table-section">
    <div class="container">
        <div class="row row-balance">
            <div class="col-lg-12">
                <div class="title-text">
                    <h4>Payment Report</h4>
                </div>
           </div>
        </div>
        <table class="table table-responsive">  
            <thead>  
                <tr>  
                    <th scope="col">  
                        @Html.DisplayNameFor(model => model.Payment_ID)  
                    </th>
                    <th scope="col" class="res-column">
                        @Html.DisplayNameFor(model => model.Customer_ID)  
                    </th>
                    <th scope="col" class="res-column">
                        @Html.DisplayNameFor(model => model.Lease_date)  
                    </th>
                    <th scope="col" class="res-column">
                        @Html.DisplayNameFor(model => model.Payment_date)  
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.Payment_amount)  
                    </th>
                    <th scope="col">
                        Details
                    </th>
                </tr>  
            </thead>  
            <tbody>  
                @foreach (var item in Model)  
                {  
                    <tr>  
                        <td>  
                        @Html.DisplayFor(modelItem => item.Payment_ID)  
                        </td>  
                        <td class="res-column">  
                            @Html.DisplayFor(model => item.Customer_ID)  
                        </td>  
                        <td  class="res-column">  
                            @Html.DisplayFor(model => item.Lease_date)  
                        </td>  
                        <td  class="res-column">  
                            @Html.DisplayFor(model => item.Payment_date)  
                        </td>  
                        <td>  
                            @Html.DisplayFor(model => item.Payment_amount)  
                        </td>  
                        <td>  
                            <a asp-action="PaymentEdit" asp-route-id="@item.Payment_ID">Edit</a> |  
                            <a asp-action="PaymentDetails" asp-route-id="@item.Payment_ID">Details</a> |  
                            <a asp-action="PaymentDelete" asp-route-id="@item.Payment_ID">Delete</a>  
                        </td>  
                    </tr>  
                }  
            </tbody>  
        </table>
        <div class="row" style="text-align:center;padding-bottom:20px;margin-top:20px">
            <div class="col-lg-12">
                <a asp-action="PaymentCreate" class="navigate-link">To create a new payment manual</a> 
            </div>
        </div>
    </div>
</section> 
