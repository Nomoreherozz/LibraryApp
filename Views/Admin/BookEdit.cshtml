@model PE2023test.Models.Book 

@{  
    Layout = "_Layout2";
    ViewData["Title"] = "Edit";  
}  

<section class ="breadcrumb">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>Books Edit Page.</h2>
            </div>
        </div>
    </div>
</section>

<section class="book-edit">
    <div class="container">
        <div class="row row-balance">
            <div class="col-lg-12">
                <div class="title-text">
                    <h4>Books Edit</h4>
                </div>
           </div>
            <div class="col-lg-4 col-md-3 col-sm-3">  
               <form asp-action="BookEdit">  
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>  
                    <input type="hidden" asp-for="ID" />  
                    <div class="form-group">  
                        <label asp-for="Title" class="label"> Edit the Title</label>  
                        <input asp-for="Title" class="form-control input-text" />  
                        <span asp-validation-for="Title" class="text-danger"></span>  
                    </div>  
                    <div class="form-group">  
                        <label asp-for="Category_ID" class="label">Edit the Category_ID</label>  
                        <input asp-for="Category_ID" class="form-control input-text" />  
                        <span asp-validation-for="Category_ID" class="text-danger"></span>  
                    </div>  
                    <div class="form-group">  
                        <label asp-for="Publication_Year" class="label">Edit the Publication_Year</label>  
                        <input asp-for="Publication_Year" class="form-control input-text" />  
                        <span asp-validation-for="Publication_Year" class="text-danger"></span>  
                    </div>  
                    <div class="form-group">  
                        <label asp-for="Quantity" class="label">Edit the Quantity</label>  
                        <input asp-for="Quantity" class="form-control input-text" />  
                        <span asp-validation-for="Quantity" class="text-danger"></span>  
                    </div>              
                    <div class="form-group">  
                        <input type="submit" value="Save" class="btn" />  
                    </div>  
                </form>  
            </div>  
       </div>
        <div class="row link-row">
            <div class="col-lg-12">
              <a asp-action="BookIndex" class="navigate-link">Back to List</a>  
            </div>
        </div>
    </div>
</section>

@section Scripts {  
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}  
}