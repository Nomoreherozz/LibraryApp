@model IEnumerable<PE2023test.Models.ViewBook_Author> 
     
@{  
    Layout = "_Layout2";
        ViewData["Title"] = "Thư viện của những chú bé";  
    }  
<section class ="breadcrumb">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>Book_Author Index Page.</h2>
            </div>
        </div>
    </div>
</section>

<section class="table-section">
    <div class="container">
        <div class="row row-balance">
            <div class="col-lg-12">
                <div class="title-text">
                    <h4>Book Author Report</h4>
                </div>
           </div>
        </div>
        <table class="table table-responsive">  
            <thead>  
                <tr>  
                    <th scope="col">  
                        @Html.DisplayNameFor(model => model.Book_Authors.BookID)  
                    </th>  
                    <th>  
                        @Html.DisplayNameFor(model => model.Book_Title)  
                    </th scope="col">  
                    <th>  
                        @Html.DisplayNameFor(model => model.Book_Authors.AuthorID)  
                    </th>  
                    <th scope="col">  
                        @Html.DisplayNameFor(model => model.Author_Name)  
                    </th>
                    <th scope="col">
                        Details
                    </th>
                </tr>  
            </thead>  
            <tbody>  
                @foreach (var item in Model)  
                {  
                    <tr>  
                        <td>  
                            @Html.DisplayFor(modelItem => item.Book_Authors.BookID)  
                        </td>  
                        <td>  
                            @Html.DisplayFor(model => item.Book_Title)  
                        </td>   
                        <td>  
                            @Html.DisplayFor(modelItem => item.Book_Authors.AuthorID)  
                        </td>  
                        <td>
                            @Html.DisplayFor(model => item.Author_Name)  
                        </td>  
                        <td>  
                            <a asp-action="Book_AuthorDetails" asp-route-id="@item.Book_Authors.BookID">Details</a>      
                        </td> 
                    </tr>  
                }  
            </tbody>  
        </table>
        <div class="row" style="text-align:center;padding-bottom:20px;margin-top:20px">
            <div class="col-lg-12">
                <a asp-action="Book_AuthorCreate" class="navigate-link">To create a new author writing book</a> 
            </div>
        </div>
    </div>
</section>  
