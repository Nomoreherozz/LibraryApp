@*
 
*@
@model PE2023test.Models.Lease
  
@{  
    Layout = @ViewBag.Layout;
    ViewData["Title"] = "Create new lease";  
}  

<section class ="breadcrumb">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>Lease Create Page.</h2>
            </div>
        </div>
    </div>
</section>

<section class="create-lease">
    <div class="container">
        <div class="row row-balance">
            <div class="col-lg-12">
                <div class="title-text">
                    <h4>Lease Create</h4>
                </div>
           </div>
            <div class="col-lg-4 col-md-3 col-sm-3">  
                <form asp-action="LeaseCreate">  
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>  
                    <div class="form-group">  
                        <label asp-for="Lease_date" class="label">The date that you want to lease this book</label>  
                        <input asp-for="Lease_date" class="datetime" />  
                        <span asp-validation-for="Lease_date" class="text-danger"></span>  
                    </div> 
                    <div class="form-group">  
                        <label asp-for="Expiry_date" class="label">The date that you want to return this book</label>  
                        <input asp-for="Expiry_date" class="datetime" />  
                        <span asp-validation-for="Expiry_date" class="text-danger"></span>  
                    </div> 
                    <div class="form-group">  
                        <input type="submit" value="Creating Lease" class="btn"/>  
                    </div>  
                </form>  
            </div>  
       </div>
    </div>
    <div class="row link-row">
        <div class="col-lg-4">
            <a asp-action="LeaseIndex" class="navigate-link">Back to List</a>  
        </div>
    </div>
</section>

@section Scripts {  
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}  
}