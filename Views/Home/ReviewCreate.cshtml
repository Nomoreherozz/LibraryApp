@model PE2023test.Models.Review
  
@{  
    Layout = @ViewBag.Layout;
    ViewData["Title"] = "Create new review";  
}  
<section class ="breadcrumb">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>Lease Details Page.</h2>
            </div>
        </div>
    </div>
</section>

<section class="create-review">
    <div class="container">
        <div class="row">  
            <div class="col-lg-4 col-md-3 col-sm-3">  
                <form asp-action="ReviewCreate"> 
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div> 
                    <div class="form-group">  
                        <label asp-for="Review_context" class="label">Your opinion on this book:</label>  
                        <input asp-for="Review_context" class="form-control input-text" />  
                        <span asp-validation-for="Review_context" class="text-danger"></span>  
                    </div> 
                    <div class="form-group">  
                        <label asp-for="Review_star" class="label" >How many stars:</label>  
                        <input asp-for="Review_star" class="form-control input-text" min="0" max="5" type="number"/>  
                        <span asp-validation-for="Review_star" class="text-danger"></span>  
                    </div> 
                    <div class="form-group">  
                        <input type="submit" value="Creating Review" class="btn"/>  
                    </div>  
                </form>  
            </div>  
       </div>
    </div>
</section>

@section Scripts {  
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}  
}