@model IEnumerable<PE2023test.Models.ViewBook>  
     
@{
    Layout = @ViewBag.Layout;
    ViewData["Title"] = "Thư viện của những chú bé";
}  

<section class ="book-products">
    <div class="container">
        <div class = "row">
            <div class ="col-lg-12">
                <div class="trending-books">
                    <div class="row" id="trending-row">
                        <div class="col-lg-8 col-md-8 col-sm-8">
                            <div class ="trending-title">
                                <h4>SEARCH</h4>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        @if (!Model.Any())
                        {
                            <h4> NOT FOUND ANY BOOK</h4>
                        }
                        @foreach (var item in Model)
                               {
                                   <div class ="col-lg-3 col-md-6 col-sm-6">
                                       <div class="product-item">
                                           <div class= "product_pic set-bg" style="background-image:url(@item.add_img_Book)">
                                               <div class="image__img">
                                                   <div class="image__overlay image__overlay--blur">
                                                        <p class="image__description">@item.Description</p>
                                                   </div>
                                               </div>
                                               <div class="info">
                                                   @item.Book.Publication_Year
                                               </div>
                                           </div>
                                       </div>
                                       <div class="product-item-text">
                                           <h4><a asp-action="BookDetails" asp-route-id="@item.Book.ID" >@item.Book.Title</a></h4>
                                       </div>
                                   </div>
                               }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>